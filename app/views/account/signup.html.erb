<%
  @title = :signup_title.t
%>

<%= form_with(url: { action: :signup }) do |form| %>

  <%= fields_for(:new_user) do |fields| %>
    <div class="form-group mt-3">
      <%= fields.label(:login, :signup_login.t + ":") %>
      <%= fields.text_field(:login, { data: { autofocus: true },
                                      class: "form-control") %>
    </div>

    <div class="form-group mt-3">
      <%= fields.label(:password, :signup_choose_password.t + ":") %>
      <%= fields.password_field(:password, value: @new_user.password, class: "form-control") %>
    </div>

    <div class="form-group mt-3">
      <%= fields.label(:password_confirmation,
                      :signup_confirm_password.t + ":") %>
      <%= fields.password_field(:password_confirmation, class: "form-control") %>
    </div>

    <div class="form-group mt-3">
      <%= fields.label(:email, :signup_email_address.t + ":") %>
      <%= fields.text_field(:email, class: "form-control") %>
      <%= fields.label(:email_confirmation, :signup_email_confirmation.t + ":") %>
      <%= fields.label(:email_confirmation, class: "form-control") %>
      <div class="help-note">
        <%= :signup_email_help.tp + :email_spam_notice.tp %>
      </div>
    </div>

    <div class="form-group mt-3">
      <%= fields.label(:name, :signup_name.t + ":") %>
      <%= fields.text_field(:name, class: "form-control") %>
    </div>

    <div class="form-group mt-3">
      <%= fields.label(:theme, :signup_preferred_theme.t + ":") %>
      <%= fields.select(:theme, [[:theme_random.l, "NULL"]] + MO.themes,
                        class: "form-control") %>
    </div>
  <% end %>

  <%= form.submit(:signup_button.l,
                  class: "btn btn-default center-block mt-3") %>
<% end %>
