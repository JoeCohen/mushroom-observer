<% # Notes Settings of Account Preferences Form %>
<%= fields_for(:user) do |f| %>

  <div class="form-group mt-3">
    <%= content_tag(:span, :prefs_notes_template.t,
                    class: "font-weight-bold") %>
    <%= content_tag(:p, :prefs_notes_template_explanation.t) %>
    <%= f.text_area(:notes_template, rows: 1, class: "form-control") %>
  </div>

<% end %>

<%= form.submit(:SAVE_EDITS.l, class: "btn btn-default center-block mt-3") %>
