<%
  @title = :show_past_location_title.t(
    num: @location.version,
    name: @location.display_name
  )

  tabs = [
    link_to(:show_location.t(location: @location.display_name),
            @location.show_link_args)
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="row">
  <div class="col-xs-12 max-width-text-plus-padding">
    <%= show_past_versions(@location) %>

    <%= render(partial: "location", object: @location) %>

    <div class="push-down">
      <%= show_object_footer(@location) %>
    </div>
  </div>
</div>
