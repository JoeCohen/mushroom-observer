<%
  @title = :donors_title.l

  tabs = [
    link_to(:donate_tab.t, action: :donate)
  ]
  if is_in_admin_mode?
    tabs += [
	    link_to(:create_donation_tab.t, action: :create_donation),
	    link_to(:review_donations_tab.t, action: :review_donations)
    ]
  end
  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="row">
  <div class="col-xs-12 max-width-text">

    <center class="push-down push-up">
      <table class="table-striped table-donors">
        <% for donor in @donor_list %>
          <tr>
            <td>
              <%= donor["who"] %>
            </td>
          </tr>
        <% end %>
      </table>
    </center>

    <%= :donors_order.tp %>
  </div>
</div>
