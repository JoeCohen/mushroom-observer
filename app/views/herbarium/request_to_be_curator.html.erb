<%
  @title = :show_herbarium_curator_request.t

  tabs = [
    link_to(:cancel_and_show.t(type: :herbarium), @herbarium.show_link_args),
    link_to(:create_herbarium.t, action: :create_herbarium),
    link_to(:herbarium_index.t, action: :index)
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="max-width-text">
  <%= :show_herbarium_curator_help.tp %>
  <%= form_tag do %>
    <div class="form-group push-down">
      <%= label_tag(:herbarium_name, :HERBARIUM.t) %>: <%= @herbarium.name.t %>
    </div>

    <div class="form-group push-down">
      <%= label_tag(:notes, :NOTES.t + ":") %>
      <%= text_area_tag(:notes, "", rows: 10, class: "form-control",
                        data: {autofocus: true}) %>
    </div>

    <%= submit_tag(:SEND.l, class: "btn center-block push-down") %>
  <% end %>
</div>
