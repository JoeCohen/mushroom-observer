<p id="notice"><%= notice %></p>

<h1>Visual Groups</h1>

<%= link_to(:visual_group_create.t,
            new_visual_model_visual_group_path(@visual_model)) %>

<table class="table-striped table-visual-model mb-3 mt-3">
  <thead>
    <tr>
      <th><%= :NAME.t %></th>
      <th><%= :visual_group_image_count.t %></th>
      <th><%= :APPROVED.t %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @visual_groups.each do |visual_group| %>
      <tr>
        <td><%= link_to(visual_group.name, visual_group) %></td>
	<td><%= visual_group.image_count %>
        <td><%= visual_group.approved %></td>
        <td><%= link_to(:EDIT.t, edit_visual_group_path(visual_group)) %></td>
        <td><%= link_to(:DESTROY.t, visual_group, method: :delete,
		        data: { confirm: :are_you_sure.t }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_with do |form| %>
  <div>
    <div class="form-group">
      <%= form.label :name_list %><br>
      <%= form.text_area(:name_list, cols: 60, rows: 10) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
