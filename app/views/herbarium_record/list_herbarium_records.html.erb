<%
  @title ||= :list_herbarium_records_title.t

  if @links.any?
    tabs = create_links(@links)
    @tabsets = { right: draw_tab_set(tabs) }
  end

  flash_error(@error) if @error && @objects.empty?
%>

<%= paginate_block(@pages) do %>
  <% if @objects.any? %>
    <table class="table table-striped">
      <% for herbarium_record in @objects
				herbarium = herbarium_record.herbarium %>
        <tr>
          <td>
            <%= link_with_query(herbarium_record.herbarium_label, herbarium_record.show_link_args) %>
            (<%= link_with_query(herbarium.name.t, herbarium.show_link_args) %>)<br/>
            <small><%= herbarium_record.created_at.web_time %></small>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
<% end %>
