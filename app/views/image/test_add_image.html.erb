<% @title = "Test Upload Speed" %>

<div class="row">
  <div class="col-xs-12 max-width-text">
    <p>This page is strictly for testing image upload performance.  Images uploaded
    through this page are not saved and no database changes are made.</p>

    <% if @log_entry %>
      <p>Test <%= @log_entry.id %> created: <%= @log_entry.created_at.web_time %></p>
    <% end %>

    <%= form_tag({action: :test_upload_image, log_id: @log_entry.id}, {multipart: true}) do %>
      <div class="form-group form-inline">
        <% label(:upload, :image1, "Image 1") %>: <%= custom_file_field(:upload, :image1) %><br/>
        <% label(:upload, :image2, "Image 2") %>: <%= custom_file_field(:upload, :image2) %><br/>
        <% label(:upload, :image3, "Image 3") %>: <%= custom_file_field(:upload, :image3) %><br/>
        <% label(:upload, :image4, "Image 4") %>: <%= custom_file_field(:upload, :image4) %><br/>
      </div>

      <%= submit_tag(:UPLOAD.l, class: "btn center-block push-down") %>
    <% end %>
  </div>
</div>
