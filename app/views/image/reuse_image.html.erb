<%
# NOTE: Move template to account/images/new
#       Account::ImagesController#new
# NOTE: Move to observations/images/new
#       Observations::ReuseImagesController#new
# Partial should be in shared
  if @mode == :profile
    @title = :image_reuse_title.t(name: @user.legal_name)
    url_args = { action: :reuse_image, mode: @mode }
  else
    @title = :image_reuse_title.t(name: @observation.unique_format_name)
    obs_id = @observation.id
    tabs = [
      link_with_query(:show_object.t(type: :observation),
                      permanent_observation_path(obs_id)),
      link_with_query(:image_reuse_edit.t,
                      edit_observation_path(obs_id))
    ]
    @tabsets = { right: draw_tab_set(tabs) }
    url_args = { action: :reuse_image, mode: @mode, obs_id: obs_id }
  end
  @container = :full
%>

<%= render(partial: "reuse_image", locals: { url_args: url_args }) %>
