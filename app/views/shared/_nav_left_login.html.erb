<%# Shortened left navbar for login view
    and possibly other views accessible by anonymous users
    Includes only links available to anonymous users %>
<div class="list-group list-group-compact">

  <%= link_to(:app_intro.t, observer_intro_path,
              { class: "list-group-item" }) %>
  <%= link_to(:app_how_to_use.t, observer_how_to_use_path,
              { class: "list-group-item" }) %>
  <%= link_to(:app_privacy_policy.t, policy_privacy_path,
              { class: "list-group-item" }) %>
  <%= link_to(:app_donate.t, support_donate_path,
              { class: "list-group-item indent" }) %>

  <% if @user.nil? %>
    <div class="list-group-item disabled bold">
      <i class="glyphicon glyphicon-user"> </i>
      <span> <%= :app_account.t %>:</span>
    </div>
    <%= link_to(:app_login.t, account_login_path,
                { class: "list-group-item indent" }) %>
    <%= link_to(:app_create_account.t, account_signup_path,
                { class: "list-group-item indent" }) %>
  <% elsif @user.admin && !in_admin_mode? %>
    <%= link_to(:app_turn_admin_on.t, account_turn_admin_on_path,
                { class: "list-group-item visible-xs" }) %>
  <% end %>

  <div class="list-group-item disabled bold">
    <%= :app_more.t %>
  </div>
  <%= link_to(:app_publications.t, publications_path,
              { class: "list-group-item indent" }) %>
  <%= link_to(:NEWS.t, articles_path,
              { class: "list-group-item indent" }) %>
  <%= link_to(:app_send_a_comment.t, observer_ask_webmaster_question_path,
              { class: "list-group-item indent" }) %>
  <% unless browser.bot? %>
    <div class="list-group-item indent" style="overflow:visible">
      <div class="dropdown">
        <%= content_tag(:span, "#{:app_languages.t}:") %>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"
           role="button" aria-expanded="false">
          <%= I18n.locale.upcase %>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <% for lang in Language.all.reject(&:beta).sort_by(&:order) %>
            <li><%= link_to(h(lang.name),
                    reload_with_args(user_locale: lang.locale)) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
