<% # Accepts an object and renders prev/next/index buttons. %>
<% if object %>
  <% type = object.type_tag %>
  <div>
    <%= link_with_query("« #{:BACK.t}",
                        controller: object.show_controller,
                        action: "show_prev",
                        id: object.id) %> |
    <%= link_with_query(:INDEX.t,
                        controller: object.show_controller,
                        action: "index",
                        id: object.id) %> |
    <% if @mappable %>
      <%= link_with_query(:MAP.t,
                          controller: :locations,
                          action: :map_locations) %> |
    <% end %>
    <%= link_with_query("#{:FORWARD.t} »",
                        controller: object.show_controller,
                        action: "show_next", 
                        id: object.id) %>
  </div>
<% end %>
