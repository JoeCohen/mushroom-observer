<%
   # Requires local variable object: RssLog, Observation, Image, etc. instance.
   presenter = LogItemPresenter.new(object, @view)
%>

<% if presenter %>
<li class="col mb-4">
  <div class="card log-details h-100" id="<%= presenter.id %>">
    <div class="card-img-top">
      <%= presenter.thumbnail %>
    </div><!-- .card-img-top -->
    <div class="card-body p-3 lh-2">
      <%= link_to(presenter.what) do %>
        <p class="card-title log-what d-flex flex-row justify-content-between align-items-start lh-1-2 mb-2">
          <span class="log-title"><span class='log-name h5 font-weight-bold font-italic'><%= presenter.name %> </span>
          <% if presenter.author %><br /><span class='log-author small text-muted'><%= presenter.author %> </span><% end %></span>
          <span class='log-id text-muted font-weight-normal micro badge badge-outline py-1 mt-1 ml-2'><%= presenter.id %></span>
        </p><!-- .log-what -->
      <% end %>
      <p class="card-text mb-1 small">
        <span class="log-where"><%= presenter.where %></span>
      </p><!-- .card-text -->
      <p class="card-text mb-0 small">
        <% unless presenter.when.blank? %>
          <span class="log-when"><%= presenter.when %>:</span> <span class="log-who"><%= presenter.who %></span>
        <% end %>
      </p><!-- .card-text -->
    </div><!-- .card-body -->
    <div class="card-footer bg-transparent px-3 text-muted">
      <p class="log-detail mb-0 small">
        <%= presenter.detail %>
      </p><!-- .rss-detail -->
      <p class="log-time mb-0 small">
        <%= presenter.fancy_time %>
      </p><!-- .log-time -->
    </div><!-- .card-footer -->
  </div><!-- .card -->
</li>
<% end %>
