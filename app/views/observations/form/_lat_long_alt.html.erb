<!-- LAT_LONG_ALT -->
<div class="row mt-3 max-width-text-times-two">
  <div class="col-sm-6">
    <label>Location:</label>
    <div id="observationFormMap" class="form-observation-map"></div>
    <span class="map-clear map-btn">Clear Map</span>
  </div>
  <div class="col-sm-6">
    <div class="well well-sm help-block">
      <div class="arrow-left d-none d-sm-block"></div>
      <%= :form_observations_lat_long_help.t %>
    </div>
  </div>
</div>
<div class="row mt-3 max-width-text-times-two">
  <div class="col-12 col-sm-6">
    <div class="row">
      <div class="col-12 col-sm-4">
        <div class="form-group">
          <%= f.label :lat, :LATITUDE.t + ":" %>
          <%= f.text_field :lat, class: "form-control" %>
        </div>
      </div>
      <div class="col-12 col-sm-4">
        <div class="form-group">
          <%= f.label :long, :LONGITUDE.t + ":" %>
          <%= f.text_field :long, class: "form-control" %>
        </div>
      </div>
      <div class="col-12 col-sm-4">
        <div class="form-group">
          <%= f.label :alt, :ALTITUDE.t + ":" %>
          <%= f.text_field :alt, class: "form-control" %>
          (<%= :units_meters.t %>)
        </div>
      </div>
      <div class="col-12 col-sm-12">
        <div class="form-inline">
          <%= f.check_box :gps_hidden, class: "form-control-xxx" %>
          <%= f.label :gps_hidden, :form_observations_gps_hidden.t %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /LAT_LONG_ALT -->
