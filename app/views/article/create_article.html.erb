<% @title = :create_article_title.l
   tabs = [link_to(:article_index.t, action: :index)]
   @tabsets = { right: draw_tab_set(tabs) }
%>

<%= form_for(:article, url: {action: :create_article},
            html: {multipart: true}) do |form| %>
  <div class="form-group push-down">
    <%= label_tag(:article_name, :article_name.t + ":") %>
    <%= form.text_field(:name, class: "form-control") %>
  </div>

  <div class="form-group push-down">
    <%= label_tag(:article_author, :AUTHOR.t + ":") %>
    <%= form.text_field(:author, class: "form-control") %>
  </div>

  <div class="form-group push-down">
    <%= label_tag(:article_body, :article_body.t + ":") %>
    <%= form.text_area(:body, rows: 20, class: "form-control") %>
  </div>
  <%= submit_tag(:edit_article_save.t, class: "btn center-block push-down") %>
<% end %>

