<!--[form:article]-->
<div class="form-group push-down">
  <%= label_tag(:article_name, :article_name.t + ":") %>
  <%= form.text_field(:name, class: "form-control") %>
  <p class="help-block"><%= :field_textile_link.t %></p>
</div>
<div class="form-group push-down">
  <%= label_tag(:article_body, :article_body.t + ":") %>
  <%= form.text_area(:body, rows: 10, class: "form-control") %>
  <p class="help-block"><%= :field_textile_link.t %></p>
</div>
<%= submit_tag(:SUBMIT.t, class: "btn center-block push-down") %>
