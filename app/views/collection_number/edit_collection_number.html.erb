<%
  @title = :edit_collection_number_title.l(name: @collection_number.format_name)

  tabs = [
    link_with_query(:cancel_and_show.t(type: :collection_number), @collection_number.show_link_args),
    link_with_query(:edit_collection_number_back_to_index.t, action: :index_collection_number),
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<div class="row">
  <div class="col-xs-12 col-sm-7 max-width-text">
    <%= form_tag(action: :edit_collection_number, id: @collection_number.id) do %>
      <%= render(partial: "form", locals: {button: :SAVE}) %>
    <% end %>
  </div>

  <div class="col-xs-12 col-sm-5 max-width-text">
    <% @collection_number.observations.each do |obs| %>
      <%= render(partial: "shared/matrix_box", locals: { object: obs.rss_log }) %>
    <% end %>
  </div>
</div>
