// What to do when receiving a request to mark obs as reviewed/not

var button = $("#mark_as_reviewed_<%= j @obs_id %>");
var form = button.parent();

if(<%= j @reviewed %> == 1) {
  button.text("<%= j :mark_as_unreviewed.t %>").addClass("active");
  form.attr("action", "<%= j observation_view_path(id: @obs_id, reviewed: 0) %>");
} else {
  button.text("<%= j :mark_as_reviewed.t %>").removeClass("active");
  form.attr("action", "<%= j observation_view_path(id: @obs_id, reviewed: 1) %>");
}
