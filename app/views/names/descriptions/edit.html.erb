<%
  @title ||= :edit_name_description_title.t(name: @description.format_name)

  tabs = [
    link_with_query(:show_object.t(type: :name),
                    action: :show,
                    id: @description.name_id),
    link_with_query(:cancel_and_show.t(type: :name_description),
                    action: :show,
                    id: @description.id)
  ]
  if @description.is_admin?(@user) || in_admin_mode?
    tabs += [
      link_to(:show_description_adjust_permissions.t,
              name_descriptions_adjust_permissions_path(
                name_id: @description.name_id, id: @description.id,
                q: get_query_param))
    ]
  end
  @tabsets = { right: draw_tab_set(tabs) }
%>

<%= render "form", locals: { button_name: :SAVE_EDITS.l } %>
