<%
  @title ||= @description.format_name.t

  tabs = [
    link_with_query(:show_object.t(type: :name),
                    @description.name.show_link_args),
    link_with_query(:show_object.t(type: :name_description),
                    @description.show_link_args)
  ]
  @tabsets = { right: draw_tab_set(tabs) }
  action = { controller: "/names/descriptions/permissions", action: :update,
             id: @description.id, q: get_query_param }
%>

<%= render(partial: "shared/adjust_permissions",
           locals: { action: action, description: @description,
                     groups: @groups, data: @data }) %>
