<%
  @title = :name_change_synonyms_title.t(name: @name.display_name)

  tabs = [
    link_to(:cancel_and_show.t(type: :name), @name.show_link_args)
  ]
  @tabsets = { right: draw_tab_set(tabs) }

  action = name_synonyms_path(id: @name.id, approved_names: @new_names,
                                   approved_synonyms: @synonym_name_ids)
%>

<%= form_with(url: action, method: :put) do |f| %>

  <%= render(partial: "form") %>
  <%= f.submit(:name_change_synonyms_submit.l,
               class: "btn btn-default center-block") %>

<% end %>
