<%
  @title ||= :create_name_description_title.t(name: @name.display_name)

  tabs = [
    link_with_query(:cancel_and_show.t(type: :name),
                    action: :show,
                    id: @description.name_id)
  ]
  @tabsets = { right: draw_tab_set(tabs) }
%>

<%= form_for(:description,
             url: add_query_param(
                    action: :create_name_description,
                    id: @description.name_id
                  )
            ) do |form| %>
  <%= render(partial: "form_name_description",
             locals: {form: form, button: :CREATE.l}) %>
<% end %>
