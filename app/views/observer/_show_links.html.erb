<h4>
  <%= :EXTERNAL_LINKS.t %>
</h4>
<div class="list-group">
  <div class="list-group-item kill-padding">
    <table class="table table-responsive" style="margin-left: 0; margin-right: 0; margin-bottom: 0;">
      <% observation.external_links.each do |link| %>
        <tr>
          <td style="border-top:0">
            <%= link_to(link.external_site.name, link.url) %>
            <% if check_permission(link) %>
              <span class="hidden" data-role="link-controls">
                [<%= content_tag(:a, :EDIT.t, href: "#",
                                 data: { role: "edit-link", id: link.id }) %> |
                <%= content_tag(:a, :REMOVE.t, href: "#",
                                 data: { role: "remove-link", id: link.id }) %>]
              </span>
            <% end %>
          </td>
        </tr>
      <% end %>
      <% @new_sites.each do |site| %>
        <tr class="hidden" data-role="link-controls">
          <td style="border-top:0">
            <%= site.name %>
            <span>
              [<%= content_tag(:a, :ADD.t, href: "#",
                               data: { role: "add-link", id: site.id }) %>]
            </span>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
