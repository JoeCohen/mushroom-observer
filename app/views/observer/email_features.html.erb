<% @title = 'Email Features' %>

<p>Sending to <%= @users.length %> users.</p>

<%= form_tag(:action => 'email_features') do %>
  <center><%= submit_tag(:SEND.l, class: "btn") %></center><br/>

  <label for="feature_email_content">Feature Email</label><br/>
  <%= text_area('feature_email', 'content', :cols => 80) %><br/><br/>
  <p>
    Users: <%= (@users.map { |u| u.login }).safe_join(', ') %>
  </p>
<% end %>
