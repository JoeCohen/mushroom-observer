<%
  @title ||= :create_location_title.t

  tabs = [
    link_to(:all_objects.t(type: :location), locations_path)
  ]
  tabs += location_search_links(@location.name)
  @tabsets = { right: draw_tab_set(tabs) }
  @container = :full

  action = {
    action: :create,
    where: @original_name,
    approved_where: @display_name,
    set_observation: @set_observation,
    set_species_list: @set_species_list,
    set_user: @set_user,
    set_herbarium: @set_herbarium,
    q: get_query_param
  }
%>

<%= render(partial: "form", locals: { action: action, button: :CREATE }) %>
