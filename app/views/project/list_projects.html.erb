<%
  @title ||= :list_projects_title.t

  tabs = [
    link_with_query(:list_projects_add_project.t, action: :add_project)
  ]
  tabs += @links.map {|str,url| link_to(str, url)} if @links
  @tabsets = { right: draw_tab_set(tabs) }

  flash_error(@error) if @error && @objects.empty?
%>

<%= paginate_block(@pages) do %>
  <% if @objects.any? %>
    <div class="list-group">
      <% for project in @objects %>
        <div class="list-group-item">
          <big>
            <%= link_with_query(project.title.t, project.show_link_args) %>
          </big><br/>
          <small>
            <%= project.created_at.web_time %>: <%= user_link(project.user) %>
          </small>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
