<%
  @title ||= :change_member_status_title.t(
    name: @candidate.legal_name,
    title: @project.title
  )

  new_tab_set do
    add_tab(:app_list_projects.t, action: :list_projects)
    add_tab_with_query(:change_member_status_edit.t, action: :edit_project,
                       id: @project.id) if check_permission(@project)
    add_tab_with_query(:cancel_and_show.t(type: :project), @project.show_link_args)
  end
%>

<div class="row">
  <div class="col-xs-12 max-width-text">
    <%= form_tag(add_query_param(action: :change_member_status, id: @project.id,
                                 candidate: @candidate.id)) do %>

      <div class="form-group push-down">
        <%= submit_tag(:change_member_status_make_member.l, class: "btn center-block push-up") %>
        <%= :change_member_status_make_member_help.t %>
      </div>

      <div class="form-group push-down">
        <%= submit_tag(:change_member_status_remove_member.l, class: "btn center-block push-up") %>
        <%= :change_member_status_remove_member_help.t %>
      </div>

      <div class="form-group push-down">
        <%= submit_tag(:change_member_status_make_admin.l, class: "btn center-block push-up") %>
        <%= :change_member_status_make_admin_help.t %>
      </div>
    <% end %>

    <%= render(partial: "show_groups", locals: {project: @project}) %>
  </div>
</div>
